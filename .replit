modules = ["php-8.2", "bash", "web", "nodejs-20", "postgresql-16"]
[agent]
expertMode = true

[userenv]

[userenv.shared]
APP_NAME = "نظام التفتيش والمراقبة"
APP_ENV = "local"
APP_DEBUG = "true"
APP_URL = "http://0.0.0.0:5000"
APP_LOCALE = "ar"
APP_FALLBACK_LOCALE = "en"
APP_FAKER_LOCALE = "ar_SA"
DB_CONNECTION = "pgsql"
SESSION_DRIVER = "file"
SESSION_LIFETIME = "120"
CACHE_STORE = "database"
QUEUE_CONNECTION = "database"
SESSION_SECURE_COOKIE = "false"
SESSION_SAME_SITE = "lax"
DB_URL = "${DATABASE_URL}"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel Server"

[[workflows.workflow]]
name = "Laravel Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && php artisan serve --host=0.0.0.0 --port=5000 --no-reload"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[nix]
channel = "stable-25_05"
packages = ["libreoffice-unwrapped", "unzip", "libreoffice", "openjdk17", "amiri", "scheherazade-new"]
