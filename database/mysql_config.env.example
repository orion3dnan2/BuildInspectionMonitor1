# =====================================================
# إعدادات MySQL للاستخدام مع XAMPP
# =====================================================
# انسخ هذا الملف إلى .env في مجلد المشروع الرئيسي
# =====================================================

APP_NAME="نظام إدارة الرقابة والتفتيش"
APP_ENV=local
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=true
APP_URL=http://localhost:8000

# إعدادات قاعدة البيانات MySQL
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=inspection_system
DB_USERNAME=root
DB_PASSWORD=

# إعدادات الجلسات
SESSION_DRIVER=file
SESSION_LIFETIME=120

# إعدادات الكاش
CACHE_DRIVER=file

# إعدادات قائمة الانتظار
QUEUE_CONNECTION=sync

# =====================================================
# خطوات الإعداد:
# =====================================================
# 1. شغّل XAMPP وفعّل Apache و MySQL
# 2. افتح phpMyAdmin (http://localhost/phpmyadmin)
# 3. استورد ملف mysql_schema.sql
# 4. انسخ هذا الملف إلى .env في المجلد الرئيسي
# 5. شغّل: php artisan key:generate
# 6. شغّل: php artisan serve
# =====================================================
